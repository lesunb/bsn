<launch> 
    <node name="cost_engine" pkg="adaptation_engine" type="cost_engine" output="screen" />

    <param name="monitor_freq" value="0.4" />        <!-- Hz -->

    <param name="setpoint" value="1" />          <!-- -->
    <param name="actuation_freq" value="0.1" />    <!-- Hz -->
    <param name="info_quant" value="5" />         <!-- [1,1000] -->

    <param name="offset" value="0.5" />            <!-- % of the current state -->
    <param name="gain" value="0.001" />              <!-- search granularity -->

    <param name="qos_attribute" value="cost" />       <!-- reliability or cost -->

</launch>